           plot,
           hist)

importFrom("flowCore", "summarizeFilter")
importFrom("clue",solve_LSAP)
importClassesFrom(Biobase,
                  AssayData)

importClassesFrom(flowCore,
                  flowFrame,
                  filterSet,
                  flowSet,
		  filter,
                  concreteFilter,
                  parameters,
                  parameterFilter,
                  rectangleGate,
                  polygonGate,
                  polytopeGate,
                  ellipsoidGate,
                  sampleFilter,
                  filterResult,
                  randomFilterResult,
