                  manyFilterResult,
                  setOperationFilter,
                  subsetFilter,
                  intersectFilter,
                  complementFilter,
                  unionFilter,
                  norm2Filter,
                  kmeansFilter,
                  expressionFilter)

importMethodsFrom(flowCore,
                  "%in%",
                  "%subset%",
                  "%on%",
                  "exprs",
                  "filter",
                  "Subset")

importMethodsFrom(flowWorkspace,
		  getGate,
		  getData,
	       	  getNodes);

## export anything w/out a dot in front. 
exportPattern("^[^\\.]")

exportClasses(flowClust,
              flowClustList,
              tmixFilter,
              tmixFilterResult,
              tmixFilterResultList,
	      flowClustPriorTree)

exportMethods(filter,
              "%in%",
              "[",
              "[[",
              length,
              coerce,
              "coerce<-",
              Subset,
              split,
              ruleOutliers,
              "ruleOutliers<-",
              Map,
              criterion,
